hergmauthor <- "Michael Schweinberger"
hergmtitle <- "Hierarchical Exponential-Family Models for Networks"
hergmdesc <- packageDescription("hergm")
hergmversion <- hergmdesc$Version
hergmdate <- hergmdesc$Date
s <- regexpr("20[0-9][0-9]", hergmdate)
hergmyear <- ifelse (s==-1, "2009", substr(hergmdate, s, s+3))
      
citHeader(
   "To cite the package 'hergm', please use the citation below.\n\n",
   'A BibTeX-format citation can be obtained by using toBibtex(citation("hergm")).',
   sep="")
   
citEntry(entry = "Manual",
         author = hergmauthor,
         title = hergmtitle,
         year         = 2009,
         note         = paste("Version ", hergmversion,
                        ".  Project home page at \\url{", projhomepage, "}", 
                        sep=""),
         address      = "University Park, PA",
         url          = "http://CRAN.R-project.org/package=hergm",
         textVersion = paste(paste(authors, collapse=", "), " (", hergmyear,
               "), ", hergmtitle, ". Version ", hergmversion,
               ". URL http://CRAN.R-project.org/package=hergm.",
               sep="")
         )

                   
