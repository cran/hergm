year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
version <- paste("R package version", meta$Version)

citHeader("To cite the package 'hergm', please use the citation below.\n\n",
   'A BibTeX-format citation can be obtained by using toBibtex(citation("hergm")).', sep="")
   
citEntry(entry = "Manual",
         author = "Michael Schweinberger, Mark Handcock, and Pamela Luna",
         title = "hergm: Hierarchical Exponential-Family Random Graph Models with Local Dependence",
         year = year,
         url = "http://cran.r-project.org/web/packages/hergm/index.html",
         textVersion = paste("Michael Schweinberger, Mark Handcock, and Pamela Luna (", year, "). hergm: Hierarchical Exponential-Family Random Graph Models with Local Dependence. ", version, ".", sep="")
         ) 
                   
